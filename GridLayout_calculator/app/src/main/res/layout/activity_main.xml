<?xml version="1.0" encoding="utf-8"?>

    <GridLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity"
        android:orientation="horizontal"
        android:rowCount="6"
        android:columnCount="4"
        android:id="@+id/gridlayout">

    <TextView
        android:id="@+id/view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_columnSpan="4"
        android:layout_gravity="right|bottom"
        android:paddingRight="5dp"
        android:text="0"
        android:textSize="30dp"/>

    <Button
        android:id="@+id/clear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_columnSpan="2"
        android:layout_gravity="fill_horizontal"
        android:text="C"/>

    <Button
        android:layout_columnSpan="2"
        android:layout_gravity="fill"
        android:text="←"
        android:id="@+id/delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <Button
        android:text="1"
        android:id="@+id/one"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <Button
        android:text="2"
        android:id="@+id/two"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <Button
        android:text="3"
        android:id="@+id/three"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <Button
        android:layout_gravity="fill_horizontal"
        android:text="+"
        android:id="@+id/add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <Button
        android:text="4"
        android:id="@+id/four"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <Button
        android:text="5"
        android:id="@+id/five"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <Button
        android:text="6"
        android:id="@+id/six"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <Button
        android:layout_gravity="fill_horizontal"
        android:text="-"
        android:id="@+id/sub"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <Button
        android:text="7"
        android:id="@+id/seven"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <Button
        android:text="8"
        android:id="@+id/eight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <Button
        android:text="9"
        android:id="@+id/nine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <Button
        android:layout_gravity="fill"
        android:text="*"
        android:id="@+id/multi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <Button
        android:text="."
        android:id="@+id/dot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <Button
        android:text="0"
        android:id="@+id/zero"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <Button
        android:text="/"
        android:id="@+id/divide"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <Button
        android:layout_gravity="fill"
        android:text="="
        android:id="@+id/equal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <Button
        android:text="x^2"
        android:id="@+id/square"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAllCaps="false"/>
    <Button
        android:text="x^y"
        android:id="@+id/squareOf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAllCaps="false"/>
    <Button
        android:text="1/x"
        android:id="@+id/recip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAllCaps="false"/>
    <Button
        android:text="π"
        android:id="@+id/pi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAllCaps="false"
        android:layout_gravity="fill"
        android:layout_rowSpan="2"/>

    <Button
        android:text="n!"
        android:id="@+id/fact"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAllCaps="false"/>
    <Button
        android:text="lg"
        android:id="@+id/lg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAllCaps="false"/>
    <Button
        android:text="ln"
        android:id="@+id/ln"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAllCaps="false"/>

    <Button
        android:text="sin"
        android:id="@+id/sin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAllCaps="false"/>
    <Button
        android:text="cos"
        android:id="@+id/cos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAllCaps="false"/>
    <Button
        android:text="tan"
        android:id="@+id/tan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAllCaps="false"/>
    <Button
        android:text="e"
        android:id="@+id/e"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAllCaps="false"
        android:layout_gravity="fill"
        android:layout_rowSpan="2"/>
    <Button
        android:text="sin^-1"
        android:id="@+id/sin1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAllCaps="false"/>
    <Button
        android:text="cos^-1"
        android:id="@+id/cos1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAllCaps="false"/>
    <Button
        android:text="tan^-1"
        android:id="@+id/tan1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAllCaps="false"/>

    <Button
        android:text="进制转换"
        android:id="@+id/switchs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_columnSpan="4"
        android:layout_gravity="fill_horizontal"/>

</GridLayout>
